{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./custom.d.ts", "src/components/section/cardSingle/index.tsx", "src/components/section/index.tsx"],
  "exclude": ["node_modules"]
}
